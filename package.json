{
  "name": "@sakhnovkrg/vue-otp-input",
  "version": "1.0.0",
  "description": "OTP input component for Vue 3",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style": "./dist/index.css",
    "./dist/index.css": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --config vite.playground.config.ts",
    "build": "vite build && vue-tsc --project tsconfig.lib.json",
    "build:playground": "vite build --config vite.playground.config.ts",
    "preview": "vite preview --config vite.playground.config.ts",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "lint:check": "eslint . --ext .vue,.js,.ts,.jsx,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "vue",
    "vue3",
    "nuxt",
    "nuxt3",
    "nuxt4",
    "otp",
    "one-time-password",
    "input",
    "component",
    "typescript",
    "sms",
    "verification",
    "2fa"
  ],
  "author": "Sakhnovkrg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sakhnovkrg/vue-otp-input.git"
  },
  "homepage": "https://github.com/Sakhnovkrg/vue-otp-input#readme",
  "bugs": {
    "url": "https://github.com/Sakhnovkrg/vue-otp-input/issues"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.5.1",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "vite": "^7.1.2",
    "vue": "^3.5.18",
    "vue-tsc": "^3.0.5"
  }
}
